<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/spacing_16"
    android:layout_marginRight="@dimen/spacing_16"
    android:layout_marginBottom="@dimen/spacing_16"
    android:background="@drawable/bg_two_corner_gradient"
    android:elevation="@dimen/spacing_12">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/spacing_8"
        android:src="@mipmap/ic_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_24"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_circle_white_line"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_12">

                <TextView
                    android:id="@+id/tv_odo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="582"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/odo"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="@dimen/spacing_8"
                android:background="@drawable/bg_circle_white_line"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_12">

                <TextView
                    android:id="@+id/tv_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="58.2"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="km/h"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/speed"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_circle_white_line"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_12">

                <TextView
                    android:id="@+id/tv_soc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="82"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="%"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soc"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_circle_white_line"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_12">

                <TextView
                    android:id="@+id/tv_tapin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="58"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="RPM"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tapin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="@dimen/spacing_8"
                android:background="@drawable/bg_circle_white_line"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_12">

                <TextView
                    android:id="@+id/tv_power"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="158"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/power"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_24"
            android:background="@drawable/bg_white_four_circle"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_16">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_light"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_gradient"
                    android:src="@mipmap/ic_bt_light_on" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_6"
                    android:text="@string/light_status"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_16"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_walk"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_gradient"
                    android:src="@mipmap/ic_walk_off" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_6"
                    android:text="@string/walk_mode"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_16"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_pas"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_gradient"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_6"
                    android:text="@string/pas_level"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_16"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_set"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_circle_gradient"
                    android:src="@mipmap/ic_bt_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_6"
                    android:text="@string/setting"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
