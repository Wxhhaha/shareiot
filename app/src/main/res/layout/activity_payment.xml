<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/topAppBar"
                style="@style/Widget.MaterialComponents.Toolbar.Primary"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/bg_shape_gradient"
                app:navigationIcon="@mipmap/ic_back_white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/pay_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_20" />

            </com.google.android.material.appbar.MaterialToolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/spacing_16"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_24"
                android:background="@drawable/bg_white_four_corner_storke"
                android:elevation="@dimen/spacing_16"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_16">

                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/ic_pay_cost"
                    android:drawablePadding="@dimen/spacing_8"
                    android:text="2.20å…ƒ"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_30" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_24"
                android:layout_marginTop="@dimen/spacing_16"
                android:text="@string/pay_type"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_16" />


            <com.wxh.shareiot.utils.MyRadioGroup
                android:id="@+id/rg_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_24"
                android:background="@drawable/bg_white_four_corner_storke"
                android:elevation="@dimen/spacing_8"
                android:orientation="vertical"
                android:padding="@dimen/spacing_16">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/alipaylogon" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spacing_16"
                        android:layout_toLeftOf="@id/llrba"
                        android:layout_toRightOf="@id/iv1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/alipay"
                                android:textColor="@color/text_gray"
                                android:textSize="@dimen/font_16" />

                            <!--                            <ImageView-->
                            <!--                                android:layout_width="32dp"-->
                            <!--                                android:layout_height="18dp"-->
                            <!--                                android:layout_marginLeft="@dimen/spacing_6"-->
                            <!--                                android:src="@mipmap/ic_tui"-->
                            <!--                                android:visibility="gone" />-->
                        </LinearLayout>

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginTop="@dimen/spacing_6"-->
                        <!--                            android:text="@string/alipay_ads"-->
                        <!--                            android:textColor="@color/mediumGrayDark"-->
                        <!--                            android:textSize="@dimen/font_14" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llrba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_alipay"
                            style="@style/pay_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:checked="true" />
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:layout_marginBottom="@dimen/spacing_8"
                    android:background="@color/lightGrayDark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivw"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_wepay" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spacing_16"
                        android:layout_toLeftOf="@id/llrbw"
                        android:layout_toRightOf="@id/ivw"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/wechatpay"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/font_16" />

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:text=""-->
                        <!--                            android:textColor="@color/mediumGrayDark"-->
                        <!--                            android:textSize="@dimen/font_14" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llrbw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_wechatpay"
                            style="@style/pay_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:layout_marginBottom="@dimen/spacing_8"
                    android:background="@color/lightGrayDark" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_paypal"
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_paypal" />

                    <LinearLayout
                        android:id="@+id/llrbp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_paypal"
                            style="@style/pay_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/spacing_8"
                    android:layout_marginBottom="@dimen/spacing_8"
                    android:background="@color/lightGrayDark" />

                <RelativeLayout
                    android:id="@+id/rl_balance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivb"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_balance_pay" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/spacing_16"
                        android:layout_toLeftOf="@id/llrbb"
                        android:layout_toRightOf="@id/ivb"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_balance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.3"
                            android:textColor="@color/text_gray"
                            android:textSize="@dimen/font_18" />

                        <!--                        <TextView-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:text="@string/balance"-->
                        <!--                            android:textColor="@color/mediumGrayDark"-->
                        <!--                            android:textSize="@dimen/font_14" />-->
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llrbb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatRadioButton
                            android:id="@+id/rb_balance"
                            style="@style/pay_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:enabled="false" />
                    </LinearLayout>
                </RelativeLayout>
            </com.wxh.shareiot.utils.MyRadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_16"
            android:background="@drawable/bt_shape_gradient"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_white_cost" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_8"
                android:padding="@dimen/spacing_8"
                android:text="@string/pay_now"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/font_20" />
        </LinearLayout>

    </LinearLayout>
</layout>